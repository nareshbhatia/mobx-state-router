{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "useDefineForClassFields": true,
        "paths": {
            "*": ["src/*", "node_modules/*"]
        }
    },
    "include": ["src", "types"]
}
